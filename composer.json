{
  "name": "vendor_name/conway",
  "description": "Conway's game of life",
  "minimum-stability": "stable",
  "license": "proprietary",
  "authors": [
    {
      "name": "Alleon",
      "email": "alvaro.leonro@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.4.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "mockery/mockery": "^1.4"
  },
  "config": {
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "GameofLife\\": [
        "src"
      ]
    }
  },
  "autoload-dev": {
    "psr-4": {
      "tests\\": [
        "tests"
      ]
    }
  },
  "scripts": {
    "tests": "phpunit"
  }
}
